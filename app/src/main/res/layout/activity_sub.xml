<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.choejunhyeog.test1.SubActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="437dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/sub_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this is Sub Activity!!"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sub_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <fragment android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentA"
            android:name="com.example.choejunhyeog.test1.FragmentA"
            android:layout_weight="1"
            tools:layout="@layout/activity_sub" />

        <FrameLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/fragmentBorC" />

        <Button android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch Fragment"
            android:textSize="20sp" />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
